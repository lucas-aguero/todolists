              <input type="text" value="{{folderEdit.folder_name}}" class="form-control" name="folder_name" placeholder="Folder Name" autofocus/>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Welcome {{userInfo.name_first}}</h3>
        </div>
        <div class="card-body">
          <form action="/update/{{userInfo.id}}" method="post">
            <div class="form-group">
              <input
                value="{{userInfo.name_first}}"
                type="text"
                name="name_first"
                placeholder="First Name"
                class="form-control"
                autofocus
              />
              <input
                value="{{userInfo.name_last}}"
                type="text"
                name="name_last"
                placeholder="Last Name"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                value="{{userInfo.email}}"
                readonly
                type="text"
                name="email"
                placeholder="e-Mail"
                class="form-control"
              />
              <input
                type="password"
                name="password"
                placeholder="Leave blank to keep same password"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">Update Info</button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>
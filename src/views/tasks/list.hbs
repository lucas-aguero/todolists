<div class="container p-3">
  <table class="table">
    <h1>All Tasks</h1>
    <thead>
      <tr>
        <th scope="col">Done</th>
        <th scope="col">Task Name</th>
        <th scope="col">Folder Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasksList}}
        <tr>
          <td scope="row">
            {{#if task_done}}
              <a href="/api/tasks/inlistedit/{{id}}">
                <div class="form-check mx-auto align-middle">
                  <input
                    class="form-check-input"
                    checked
                    name="task_done"
                    type="checkbox"
                  />
                </div>
              </a>
            {{else}}
              <a href="/api/tasks/inlistedit/{{id}}">
                <div class="form-check mx-auto align-middle">
                  <input
                    class="form-check-input"
                    name="task_done"
                    type="checkbox"
                  />
                </div>
              </a>
            {{/if}}
          </td>
          <td><a href="/api/tasks/inlistedit/{{id}}">{{task_title}}</a></td>
          <td><a
              href="/api/tasks/tasksbyfolder/{{folder_id}}+{{folder_name}}"
            >{{folder_name}}</a></td>
          <td>
            <a href="/api/tasks/edit/{{id}}" class="btn btn-primary"><i
                class="bi-pencil"
              ></i></a>
          </td>
        </tr>
      {{else}}
        <div class="col-md-4 mx-auto">
          <div class="card card-body text-center">
            <p>Tasks List is empty</p>
          </div>
        </div>
      {{/each}}

    </tbody>
  </table>
</div>